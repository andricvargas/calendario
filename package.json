{
  "name": "radial-habit-tracker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "npm run build:server && npm run build:client",
    "build:client": "vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "preview": "vite preview",
    "start": "node dist/server/index.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop radial-habit-tracker",
    "pm2:restart": "pm2 restart radial-habit-tracker",
    "pm2:delete": "pm2 delete radial-habit-tracker",
    "pm2:logs": "pm2 logs radial-habit-tracker",
    "pm2:status": "pm2 status",
    "prod": "npm run build && npm run pm2:start"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "express": "^4.18.2",
    "otplib": "^12.0.1",
    "papaparse": "^5.4.1",
    "d3": "^7.8.5",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/d3": "^7.4.3",
    "@types/papaparse": "^5.3.14",
    "@types/cookie-parser": "^1.4.6",
    "@types/express-session": "^1.17.10",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "tsx": "^4.7.0",
    "concurrently": "^8.2.2"
  }
}

